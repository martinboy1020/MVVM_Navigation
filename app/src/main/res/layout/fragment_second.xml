    <data>

        <import type="com.example.mvvm_navigation.utils.AdapterUtils.Adapters" />

        <variable
            name="viewModel"
            type="com.example.mvvm_navigation.ui.main.vm.second.SecondFragmentSubmitter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--        <com.example.mvvm_navigation.widget.UserItemWidget-->
