<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="BuildRecyclerView">
        <attr name="layout_manager_type" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
            <enum name="grid" value="2"/>
        </attr>
        <attr name="has_divider" format="boolean"/>
        <attr name="divider_height" format="integer"/>
        <attr name="item_space_margin" format="integer"/>
        <attr name="column" format="integer"/>
    </declare-styleable>

    <declare-styleable name="ItemMatchSelectorWidget">
        <attr name="itemType" format="enum">
            <enum name="league" value="0"/>
            <enum name="home" value="1"/>
            <enum name="away" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="ImageShapeWidget">
        <attr name="shapeType" format="enum">
            <enum name="rectangle" value="0"/>
            <enum name="circle" value="1"/>
            <enum name="roundedCorners" value="2"/>
        </attr>
        <attr name="roundCornersRadius" format="integer"/>
    </declare-styleable>

</resources>